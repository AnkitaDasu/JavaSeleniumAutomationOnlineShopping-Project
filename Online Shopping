package Demo;

import java.util.List;

import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.remote.RemoteWebDriver;

public class OnlineShopping {

	public static void main(String[] args) throws InterruptedException {
		WebDriver driver=new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://www.myntra.com/");
		Thread.sleep(3000);
		WebElement TF = driver.findElement(By.xpath("//input[@class='desktop-searchBar']"));
		TF.sendKeys("TRAQUILA Leheriya Printed Pure Chiffon Leheriya Saree");
		Thread.sleep(3000);
		driver.findElement(By.xpath("//span[@data-reactid='1041']")).click();
		Thread.sleep(3000);
		driver.findElement(By.xpath("//img[@title='TRAQUILA Leheriya Printed Pure Chiffon Leheriya Saree']")).click();
		Thread.sleep(3000);
		for (String winHandle : driver.getWindowHandles()) {
            driver.switchTo().window(winHandle);
        }
		driver.findElement(By.cssSelector(".pdp-add-to-bag")).click();
		WebElement Actual = driver.findElement(By.xpath("//span[@class='pdp-price']"));
		WebElement original = driver.findElement(By.xpath("//span[@class='pdp-mrp']"));
	    System.out.println("Original price: "+original.getText());
	    System.out.println("Mytra special price: "+Actual.getText());
		Thread.sleep(3000);
		driver.quit();
		WebDriver driver1=new ChromeDriver();
		driver1.manage().window().maximize();
		driver1.get("https://www.amazon.in/");
		//driver1.findElement(By.xpath("//button[@alt='Continue shopping']")).click();
		WebElement TF1 = driver1.findElement(By.xpath("//input[@id='twotabsearchtextbox']"));
		TF1.sendKeys("TRAQUILA Leheriya Printed Pure Chiffon Leheriya Saree");
		driver1.findElement(By.xpath("//input[@id='nav-search-submit-button']")).click();
		Thread.sleep(3000);
		driver1.findElement(By.xpath("//img[@src='https://m.media-amazon.com/images/I/61nt9maa67L._AC_UL320_.jpg']")).click();
		//switch to new window
		String parentWindow = driver1.getWindowHandle();
		for (String winHandle : driver1.getWindowHandles()) {
		    if (!winHandle.equals(parentWindow)) {
		        driver1.switchTo().window(winHandle);
		        break;
		    }
		}
            Thread.sleep(3000);
        
		WebElement specialPrice = driver1.findElement(By.xpath("//span[@class='a-price-whole']"));
		WebElement originalPrice = driver1.findElement(By.xpath("//span[@class='a-price a-text-price']"));
		System.out.println("Amazon's Original Price: "+originalPrice.getText());
		System.out.println("Amazon's special Price: "+specialPrice.getText());
		Thread.sleep(3000);
		driver1.quit();
	}

}
